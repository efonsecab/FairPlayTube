<h1>@Localizer[UserLatestVideosTextKey]</h1>

@if (UserYouTubeChannels != null)
{
    <div class="mb-3">
        <label class="form-label">@Localizer[SelectChannelTextKey]</label>
        <select class="form-control" @onchange="OnChange">
            @foreach (var singleChannel in this.UserYouTubeChannels)
            {
                <option value="@singleChannel.YouTubeChannelId">Channel @singleChannel.YouTubeChannelId</option>
            }
        </select>
    </div>
    @if (this.ChannelVideos != null)
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
            @foreach (var singleChannelVideo in this.ChannelVideos)
            {
                <div class="col">
                    <Card Width="auto">
                        <CardHeader>
                            <strong>
                                @singleChannelVideo.snippet.title
                            </strong>
                        </CardHeader>
                        <CardBody>
                            <div class="embed-responsive embed-responsive-1by1">
                                <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/@singleChannelVideo.id.videoId"
                                        title="@singleChannelVideo.snippet.title"
                                        frameborder="0"
                                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                        allowfullscreen></iframe>
                            </div>
                        </CardBody>
                    </Card>
                </div>
            }
        </div>
    }
}

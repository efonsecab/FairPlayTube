<h3>@Localizer[MyPlaylistsTitleKey]</h3>

<Loading IsLoading="IsLoading"></Loading>

<EditForm Model="@Model" OnValidSubmit="OnValidSubmittedPlaylist">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <ValidationSummary></ValidationSummary>
    <div class="mb-3">
        <label class="form-label">@Localizer[PlaylistNameTextKey]</label>
        <InputText class="form-control" @bind-Value="Model.PlaylistName"></InputText>
    </div>
    <div class="mb-3">
        <label class="form-label">@Localizer[PlaylistDescriptionTextKey]</label>
        <InputTextArea class="form-control" @bind-Value="Model.PlaylistDescription"
                       rows="4" cols="50" maxlength="500"></InputTextArea>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">@Localizer[SubmitTextKey]</button>
    </div>
</EditForm>



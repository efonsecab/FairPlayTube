<h3>@Localizer[PersonsInVideosTitleKey]</h3>

<Loading IsLoading="IsLoading"></Loading>

@if (this.AllPersons != null)
{
    <div class="container">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
            @foreach (var singlePerson in this.AllPersons)
            {
                <div class="col">
                    <Card>
                        <CardHeader>
                            @singlePerson.Name
                        </CardHeader>
                        <CardBody>
                            <img class="img-thumbnail" src="@singlePerson.SampleFaceUrl" />
                        </CardBody>
                    </Card>
                </div>
            }
        </div>
    </div>
}
